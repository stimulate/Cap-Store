@*model IEnumerable<QualityCap.Models.Cap>*@
@using PagedList.Mvc;
@using PagedList;
@model PaginatedList<QualityCap.Models.Cap>

@{
    ViewData["Title"] = "Index";
}

<h2>Caps</h2>

<form asp-action="Index" method="get" style="height:34px;">
    <div class="form-actions no-color" style="float:right;">

        <p>
            Search hats: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" />
        </p>

    </div>

</form>
<div class="col-md-3 col-sm-3">

    <div class="panel panel-default">
        <div class="panel-heading" style="background-color:blueviolet;">
            <h3 class="panel-title" style="color:mintcream;text-align:center;">
                Categories
            </h3>
        </div>
        <ul class="list-group">
            <li><a asp-action="Index" asp-route-id="" class="list-group-item">All</a></li>
            @foreach (var c in ViewBag.Category)
            {
                <li class="ca"><a asp-action="Index" asp-route-id="@c.CategoryID" class="list-group-item">@c.Name</a></li>
            }

        </ul>
    </div>
</div>
<div class="col-md-9 col-sm-9">

    <row>
        @foreach (var item in Model)
        {
            var imgUrl = @Href(item.Image);
            var errImg = @Href("~/images/none.jpg");

            <div class="col-md-4 col-sm-6" style="margin-top:30px;">
                <span class="thumbnail">
                    <img style="width: 100%;height:250px;" src="@imgUrl" alt="Image" onerror="this.onerror = null; this.src = '@errImg'">
                    <h4 ID="productTitle">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <div style="width:100%;height:80px;">@Html.DisplayFor(modelItem => item.Description)</div>
                    <hr>
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <p style="font-size:20px;">$<span ID="price">@Html.DisplayFor(modelItem => item.Price)  </span></p>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <a asp-action="AddToCart" asp-controller="ShoppingCart" asp-route-id="@item.CapID">	<button class="btn btn-info right cart">Add To Cart</button></a>
                        </div>
                    </div>
                </span>
            </div>
        }
    </row>
</div>
<br />
Page @(Model.TotalPages < Model.PageIndex ? 0 : Model.PageIndex) of @Model.TotalPages
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-page="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>


